<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appBarMenu"
        style="@style/defaultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AppBar Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/context_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Context Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarMenu"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/popup_Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popup Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/context_menu"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/checkableMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkable Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_Menu"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/liveDataText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LiveData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkableMenu"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkableMenu"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/changeTextButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>